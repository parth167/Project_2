<div class="spacer"></div>

<div class="container">

    <div class="post-setup" style="padding: 0px 0px 6px 0px">
        <br />
        {{#each postInfo}}
        <table class="tborder center" cellpadding="6" cellspacing="1" border="0" width="100%">
            <thead>
                <tr>
                    <td colspan="3" class="tcat center">
                        <b style='font-size:16px;'>Category: {{name}}</b>
                    </td>
                </tr>
            </thead>
        </table>

        <table id="post-id" class="tborder center break-words" cellpadding="6" cellspacing="1" border="0" width="100%">
            <tbody>
                <tr>
                    <td class="thead" style="font-weight: normal">
                        {{bodyCreatedAt}}
                    </td>
                    <td class="alt1">
                        <b>{{title}}</b>
                    </td>
                </tr>
                <tr valign="top">
                    <td class="alt2" width="200">
                        <div id="user-profile">
                            <center>
                                <a class="bigusername" rel="nofollow" href="#">{{author}}</a>
                                <hr>
                            </center>
                        </div>
                        <div>
                            <br />
                            <center>
                                <img class='user-profile-pic' src="/images/default-profile-pic.jpg" alt="user's Avatar"
                                    border="1" title="user's Avatar" />
                            </center>
                        </div>
                    </td>
                    <td class="alt1" id="post_message">{{body}}</td>
            </tbody>
        </table>
        {{/each}}
    </div>
</div>

    <h4 class='center comment-section'><b>Comment Section</b></h4>

<div class="container">
    {{#each Comments}}
        <div class="spacer"></div>
        <div class="comment-setup" style="padding: 0px 0px 6px 0px">
            <br />
            <table id="comment-id" class="tborder center break-words" cellpadding="6" cellspacing="1" border="0"
                width="100%">
                <tbody>
                    <tr class="thead" style="font-weight: normal;">
                            {{ bodyCreatedAt }}
                    </tr>
                    <tr valign="top">
                        <td class="alt2" width="200">
                            <div id="user-profile">
                                <center>
                                    <a class="bigusername" rel="nofollow" href="#">{{author}}</a>
                                    <hr>
                                </center>
                            </div>
                            <div class="smallfont">
                                <br />
                                <center>
                                    <img class='user-profile-pic' src="/images/default-profile-pic.jpg" alt="user's Avatar"
                                        border="1" title="user's Avatar" />
                                </center>
                            </div>
                        </td>
                        <td class="alt1" id="comment">
                            <div id="comment_message">
                                <p>{{body}}</p>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <br/>
        </div>
    {{/each}}
</div>

<div class="container">
    <div class="row">
        <div class="col s12">
            <label>Write your Comments here  (500)<textarea id="comments" placeholder='Leave a comment join the conversation.' class="materialize-textarea" data-length="500"></textarea>
            </label>
        </div>
    </div>
    {{#each postInfo}}
        <div id="postId" value = "{{postId}}"></div>
    {{/each}}
    <button class="btn blue darken-4 waves-effect waves-light right" type="submit" id='createComment' name="action">Reply <i class="material-icons right">send</i>
    </button>
</div>
<div class="spacer"></div>
<div class="spacer"></div>

<script src="/js/comment.js"></script>